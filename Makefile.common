# c89-compiler/Makefile.common

.SUFFIXES: .out .o .c .cc .cpp .d

C_SRCS := $(wildcard *.c)
CC_SRCS := $(wildcard *.cc)
CXX_SRCS := $(wildcard *.cpp)

C_OBJS := $(C_SRCS:.c=.o)
CC_OBJS := $(CC_SRCS:.cc=.o)
CXX_OBJS := $(CXX_SRCS:.cpp=.o)

OBJS := $(C_OBJS) $(CC_OBJS) $(CXX_OBJS)
DEPENDS = $(OBJS:.o=.d)

CC ?= gcc
CXX ?= g++
COMMON_FLAGS := -Wall -Wextra -O2
DEPEND_FLAGS := -MMD -MP
C89_RESTRICT_FLAGS := -ansi -pedantic
CFLAGS ?= $(COMMON_FLAGS) $(C89_RESTRICT_FLAGS)
CXXFLAGS ?= $(COMMON_FLAGS)
CFLAGS += $(DEPEND_FLAGS)
CXXFLAGS += $(DEPEND_FLAGS)
RM := rm -f
AR := ar rcs

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

%.o: %.cc
	$(CXX) $(CXXFLAGS) -c $< -o $@

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

-include $(DEPENDS)

clean:
	$(RM) $(OBJS) $(DEPENDS)

distclean: clean
	$(RM) $(TARGET)

.PHONY: clean distclean
